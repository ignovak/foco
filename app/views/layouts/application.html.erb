<!DOCTYPE html>
<html>
  <head>
    <title>Foco</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag params[:controller] %>
    <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag params[:controller] %>
    <script src="/sona_framework/js/sona/css.js"></script>
    <script src="/sona_framework/js/libs/less-1.3.0.js"></script>
    <script src="/sona_framework/js/libs/prefixfree.min.js"></script>
    <!-- link to enable auto styles refresh -->
    <%#<script src="/sona_framework/js/sona/less-watch.js"></script>%>
    <script src="/sona_framework/js/sona/grid_button.js"></script>
    <!-- include main dev.less file -->
    <script>
        css.load('/sona_framework/css/basic.less', 'stylesheet/less', 'dev_css');
    </script>
    <%= csrf_meta_tags %>
  </head>

  <body>

      <% if current_user %>
        <div class="main_header_wrapper">
            <header class="main_header">
                <div class="main_logo"><a href="/">Foco</a></div>
                Hi, <%= current_user.name %> |
                <%= link_to 'Log out', logout_path %>
            </header>
        </div>
      <% else %>
        <section class="login_promo">
          <div class="login_logo">Foco</div>
          <div class="login_advantages">
              <p>autrors advantages here</p>
              <p>description for revievers</p>
          </div>
            <%= link_to 'Sign up', new_user_path %>
        </section>
      <% end %>

    <%= yield %>

  </body>
</html>
